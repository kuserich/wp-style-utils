{
	"name": "@sixa/wp-style-utils",
	"version": "1.6.0",
	"description": "A collection of SCSS utilities and variables.",
	"keywords": [
		"gutenberg",
		"utils",
		"style",
		"sass",
		"scss",
		"css"
	],
	"homepage": "https://github.com/sixach/wp-style-utils#readme",
	"bugs": {
		"url": "https://github.com/sixach/wp-style-utils/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sixach/wp-style-utils.git"
	},
	"license": "GPL-3.0-or-later",
	"author": "sixa AG",
	"sideEffects": false,
	"scripts": {
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:css-fix": "wp-scripts lint-style --fix",
		"lint:js": "wp-scripts lint-js",
		"lint:js-fix": "wp-scripts lint-js --fix",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"packages-update": "wp-scripts packages-update",
		"prepublishOnly": "npm run format && npm run lint:css",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{scss,css}": [
			"npm run lint:css"
		],
		"*.{js,ts,tsx}": [
			"npm run lint:js",
			"npm run format"
		]
	},
	"dependencies": {
		"@wordpress/base-styles": "4.6.0"
	},
	"devDependencies": {
		"@wordpress/scripts": "23.5.0",
		"husky": "7.0.4",
		"lint-staged": "13.0.3",
		"prettier": "npm:wp-prettier@2.6.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
